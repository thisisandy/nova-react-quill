{
    "compilerOptions": {
        "outDir": "dist",
        "incremental": true,
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom",
            "esnext.array"
        ],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["src/module.default.js"],
}